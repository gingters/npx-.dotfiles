#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          on
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_shadow                float
yabai -m config window_opacity               off
# yabai -m config window_opacity_duration      0.0 # big sur fail
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.9
yabai -m config window_border                on
yabai -m config window_border_width          8
yabai -m config active_window_border_color   0xffbada55
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xffd75f5f
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize
yabai -m config mouse_drop_action            swap

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  08
yabai -m config bottom_padding               08
yabai -m config left_padding                 08
yabai -m config right_padding                08
yabai -m config window_gap                   08

# rules
yabai -m rule --add app="^App Store$" manage=off
yabai -m rule --add app="^Finder$" title="^Bin$" manage=off
yabai -m rule --add app="^Parallels Desktop$" title="^Control Center$" manage=off
yabai -m rule --add app="^iTerm2$" manage=off topmost=on
yabai -m rule --add app="^Harvest$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Unity$" manage=off

yabai -m rule --add app="^Discord$" display=1
yabai -m rule --add app="^Discord$" title="^Loading$" manage=off topmost=on
yabai -m rule --add app="^Slack$" display=1


echo "yabai configuration loaded.."
